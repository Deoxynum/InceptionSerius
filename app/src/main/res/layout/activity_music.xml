<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.MusicActivity.MusicActivity">

    <include
        layout="@layout/toolbar_main"
        android:id="@+id/tbMusicTitleBar"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tbMusicTitleBar">

        <android.support.design.widget.TabLayout
            android:id="@+id/tlMusicTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextColor="@color/slightly_less_white"
            android:background="@color/player_alpha_background"
            android:elevation="6dp"
            />


        <android.support.v4.view.ViewPager
            android:id="@+id/vpMusicViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below= "@+id/tlMusicTabLayout"
            />

    </RelativeLayout>


</RelativeLayout>