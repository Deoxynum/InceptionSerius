<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/black_background">

    <RelativeLayout
        android:id="@+id/rlItemLayout"
        android:layout_width="match_parent"
        android:layout_height="98dp">
        <ImageView
            android:id="@+id/ivwImageThumbIF"
            android:contentDescription="ThumbNail"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:alpha="0.7"
            android:scaleType="centerCrop"
            android:background="@color/colorAccent"
            />

        <TextView
            android:id="@+id/tvwTitleIF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:singleLine="true"
            android:text="Video Title"
            android:textColor="@color/slightly_less_white"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rlItemLayout"
        android:background="@color/slightly_less_white"/>

</RelativeLayout>